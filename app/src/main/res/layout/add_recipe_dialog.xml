<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_field"
    android:backgroundTint="@color/purple_50"
    android:padding="20dp"
    android:id="@+id/ll_add_recipe">

    <EditText
        android:id="@+id/edt_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_field"
        android:paddingVertical="2dp"
        android:paddingHorizontal="8dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:backgroundTint="@color/purple_200"
        android:hint="Title"/>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp"/>

    <EditText
        android:id="@+id/edt_add_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_field"
        android:paddingVertical="2dp"
        android:paddingHorizontal="8dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:backgroundTint="@color/purple_100"
        android:hint="Author"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_field"
        android:paddingVertical="10dp"
        android:backgroundTint="@color/purple_100"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Ingredients:"/>

        <EditText
            android:id="@+id/edt_add_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:textColor="@color/purple_500"
            android:backgroundTint="@color/purple_50"
            android:hint="Type ingredients here"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_field"
        android:paddingVertical="10dp"
        android:backgroundTint="@color/purple_100"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Instructions:"/>
        <EditText
            android:id="@+id/edt_add_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:textColor="@color/purple_500"
            android:backgroundTint="@color/purple_50"
            android:hint="Type instructions here"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp"/>

    <Button
        android:id="@+id/btn_add_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add"
        app:cornerRadius="30dp" />

</LinearLayout>